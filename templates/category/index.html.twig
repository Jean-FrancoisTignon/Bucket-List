{% extends 'base.html.twig' %}

{% block title %}ategories{% endblock %}

{% block body %}
    <h2>Catégories</h2>

    <table class="table">
        <thead>
            <tr>
                <th class="col-wish0">Id</th>
                <th class="col-wish1">Nom</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
        {% for category in categories %}
            <tr>
                <td class="col-wish0">{{ category.id }}</td>
                <td class="col-wish1">{{ category.name }}</td>
                <td class="col-btn"><a href="{{ path('app_category_show', {'id': category.id}) }}" title="Edition"><button type="button" class="btn btn-modifier">Editer</button></a></td>
                <td class="col-btn"><a href="{{ path('app_category_edit', {'id': category.id}) }}" title="modification"><button type="button" class="btn btn-modifier">Modifier</button></a></td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">Pas d'enregistrement actuellement</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <br>
    <a href="{{ path('app_category_new') }}"><button type="button" class="btn btn-modifier">Nouvelle catégorie</button></a>
{% endblock %}
