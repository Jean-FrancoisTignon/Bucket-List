{% extends 'base.html.twig' %}

{% block body %}
    <h2>All wishes</h2>
    <section class="wish-list">
        {% for wish in wishes %}
            <article>
                <a href="{{ path('app_wish_detail', {'id': wish.id}) }}" title="detail">{{ wish.title }}</a>
            </article>
        {% endfor %}
    </section>
{% endblock %}

{% block title %}
{{ parent() }} | All wishes
{% endblock %}

